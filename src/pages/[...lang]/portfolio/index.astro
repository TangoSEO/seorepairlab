---
import Base from "@/layouts/Base.astro";
import { generatePaths } from "@/lib/utils/i18nUtils";
import PortfolioSection from "@/components/sections/PortfolioSection.astro";
import { getEntryCTM } from "@/lib/customContentLoader.astro";
import { markdownify } from "@/lib/utils/textConverter";

export function getStaticPaths() {
  return generatePaths();
}

const page = await getEntryCTM("pages", "portfolio", Astro.currentLocale);
---

<Base {...page?.data}>
  <section class="py-24 bg-white">
      <div class="container space-y-6 text-center">
            <h1 class="text-display-3 font-bold uppercase tracking-tighter" set:html={markdownify(page?.data.title || "THE LAB")}></h1>
            <p class="text-lg md:text-xl text-text-default/80 max-w-2xl mx-auto font-secondary">A repository of technical SEO experiments, case studies, deep-dive guides, and utility tools developed to solve complex search challenges.</p>
      </div>
  </section>
  <PortfolioSection />
</Base>
