---
import PageLayout from "@/layouts/Base.astro";

const meta = {
	title: "Contact Jessica Schmukler - Technical SEO Consultant",
	description:
		"Get in touch with Jessica Schmukler for technical SEO consulting. Free initial consultation for complex Google indexation issues, Index Bloat, and server optimization.",
};

// Contact schema for better local SEO
const contactSchema = {
	"@context": "https://schema.org",
	"@type": "ContactPage",
	mainEntity: {
		"@type": "Person",
		name: "Jessica Schmukler",
		jobTitle: "Technical SEO Consultant",
		url: "https://seorepairlab.com",
		contactPoint: {
			"@type": "ContactPoint",
			contactType: "Professional Services",
			areaServed: ["US", "CA"],
			availableLanguage: ["English", "Spanish"],
		},
	},
};
---

<PageLayout meta={meta}>
	<!-- Contact Schema JSON-LD -->
	<script type="application/ld+json" set:html={JSON.stringify(contactSchema)} />

	<section class="space-y-8">
		<!-- Header -->
		<div class="space-y-4">
			<h1 class="title text-4xl">Contact</h1>
			<p class="text-xl text-gray-600 dark:text-gray-300">
				Ready to solve your technical SEO issues? Let's discuss your
				<span class="text-accent font-semibold">Google indexation problems</span>
				and create a custom solution.
			</p>
		</div>

		<div class="grid gap-12 lg:grid-cols-2">
			<!-- Contact Form -->
			<div class="space-y-6">
				<h2 class="text-2xl font-semibold">Get Your Free Technical SEO Analysis</h2>

				<form action="https://formsubmit.co/your-email@gmail.com" method="POST" class="space-y-6">
					<!-- Hidden fields for FormSubmit configuration -->
					<input type="hidden" name="_subject" value="New Technical SEO Inquiry - SEO Repair Lab" />
					<input type="hidden" name="_captcha" value="false" />
					<input type="hidden" name="_template" value="table" />
					<input type="hidden" name="_next" value="https://seorepairlab.com/thank-you/" />

					<!-- Name Field -->
					<div class="space-y-2">
						<label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
							Full Name *
						</label>
						<input
							type="text"
							id="name"
							name="name"
							required
							class="focus:ring-accent focus:border-accent w-full rounded-lg border border-gray-300 px-4 py-3 focus:ring-2 dark:border-gray-600 dark:bg-gray-800 dark:text-white"
							placeholder="Your full name"
						/>
					</div>

					<!-- Email Field -->
					<div class="space-y-2">
						<label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
							Email Address *
						</label>
						<input
							type="email"
							id="email"
							name="email"
							required
							class="focus:ring-accent focus:border-accent w-full rounded-lg border border-gray-300 px-4 py-3 focus:ring-2 dark:border-gray-600 dark:bg-gray-800 dark:text-white"
							placeholder="your@email.com"
						/>
					</div>

					<!-- Phone Field -->
					<div class="space-y-2">
						<label for="phone" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
							Phone Number
						</label>
						<input
							type="tel"
							id="phone"
							name="phone"
							class="focus:ring-accent focus:border-accent w-full rounded-lg border border-gray-300 px-4 py-3 focus:ring-2 dark:border-gray-600 dark:bg-gray-800 dark:text-white"
							placeholder="+1 (555) 123-4567"
						/>
					</div>

					<!-- Website URL Field -->
					<div class="space-y-2">
						<label for="website" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
							Website URL *
						</label>
						<input
							type="url"
							id="website"
							name="website"
							required
							class="focus:ring-accent focus:border-accent w-full rounded-lg border border-gray-300 px-4 py-3 focus:ring-2 dark:border-gray-600 dark:bg-gray-800 dark:text-white"
							placeholder="https://yourwebsite.com"
						/>
					</div>

					<!-- Notes/Issues Field -->
					<div class="space-y-2">
						<label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
							Technical SEO Issues (Optional)
						</label>
						<textarea
							id="message"
							name="message"
							rows="5"
							class="focus:ring-accent focus:border-accent w-full resize-y rounded-lg border border-gray-300 px-4 py-3 focus:ring-2 dark:border-gray-600 dark:bg-gray-800 dark:text-white"
							placeholder="Describe any known issues: pages not indexing, server errors, site speed problems, etc."
						></textarea>
					</div>

					<!-- Submit Button -->
					<button
						type="submit"
						class="bg-accent hover:bg-accent/90 focus:ring-accent w-full rounded-lg px-6 py-3 font-semibold text-white transition-colors focus:ring-2 focus:ring-offset-2"
					>
						Send Technical SEO Inquiry
					</button>
				</form>
			</div>

			<!-- Contact Information -->
			<div class="space-y-8">
				<div class="space-y-6">
					<h3 class="text-xl font-semibold">Other Ways to Reach Me</h3>

					<!-- WhatsApp -->
					<div class="flex items-start gap-4">
						<div
							class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg bg-green-500 text-white"
						>
							<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
								<path
									d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"
								></path>
							</svg>
						</div>
						<div>
							<h4 class="font-medium text-gray-900 dark:text-white">WhatsApp</h4>
							<p class="text-sm text-gray-600 dark:text-gray-400">
								Quick response for urgent technical issues
							</p>
							<a href="https://wa.me/5491234567890" class="text-accent text-sm hover:underline">
								Message me directly
							</a>
						</div>
					</div>

					<!-- LinkedIn -->
					<div class="flex items-start gap-4">
						<div
							class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg bg-blue-600 text-white"
						>
							<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
								<path
									d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
								></path>
							</svg>
						</div>
						<div>
							<h4 class="font-medium text-gray-900 dark:text-white">LinkedIn</h4>
							<p class="text-sm text-gray-600 dark:text-gray-400">
								Professional networking and updates
							</p>
							<a
								href="https://www.linkedin.com/in/technicalseo/"
								class="text-accent text-sm hover:underline"
							>
								Connect with me
							</a>
						</div>
					</div>
				</div>

				<!-- Working Hours -->
				<div class="space-y-4 rounded-lg bg-gray-50 p-6 dark:bg-gray-800">
					<h3 class="text-lg font-semibold">Working Hours</h3>
					<div class="space-y-2 text-sm">
						<div class="flex justify-between">
							<span class="text-gray-600 dark:text-gray-400">Monday - Friday</span>
							<span class="font-medium">9:00 AM - 6:00 PM (EST)</span>
						</div>
						<div class="flex justify-between">
							<span class="text-gray-600 dark:text-gray-400">Response Time</span>
							<span class="text-accent font-medium">Within 24 hours</span>
						</div>
						<div class="flex justify-between">
							<span class="text-gray-600 dark:text-gray-400">Location</span>
							<span class="font-medium">Argentina (Remote Services)</span>
						</div>
					</div>
				</div>

				<!-- What to Expect -->
				<div class="space-y-4">
					<h3 class="text-lg font-semibold">What to Expect</h3>
					<ul class="space-y-2 text-sm text-gray-600 dark:text-gray-400">
						<li class="flex items-start gap-2">
							<span class="text-accent mt-1">✓</span>
							<span>Free initial consultation to understand your technical issues</span>
						</li>
						<li class="flex items-start gap-2">
							<span class="text-accent mt-1">✓</span>
							<span>Detailed analysis of your website's technical SEO health</span>
						</li>
						<li class="flex items-start gap-2">
							<span class="text-accent mt-1">✓</span>
							<span>Custom proposal with specific solutions and timeline</span>
						</li>
						<li class="flex items-start gap-2">
							<span class="text-accent mt-1">✓</span>
							<span>Clear communication throughout the project</span>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
</PageLayout>
