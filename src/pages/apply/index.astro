---
import Base from "@/layouts/Base.astro";
import ContactForm from "@/layouts/components/widgets/ContactForm.astro";
import { getEntry } from "astro:content";

const entry = await getEntry("sections", "english/apply-form");

if (!entry) {
  // Debug fallback
  // console.error("Entry not found for english/apply-form");
  return Astro.redirect("/404");
}
---

<Base title="Apply for SEO Core">
  <section class="section-spacing">
    <div class="container">
      <div class="max-w-3xl mx-auto border-2 border-black p-8 bg-white shadow-none">
        <h1 class="text-4xl font-bold uppercase tracking-tight mb-2 text-center text-black">Start Optimization</h1>
        <p class="text-center font-mono text-gray-500 mb-10">Application for SEO Core Plan ($97/mo)</p>
        
        {entry && <ContactForm form={entry.data.form} />}
        {!entry && <p class="text-red-600 text-center">Error loading application form.</p>}
      </div>
    </div>
  </section>
</Base>
