---
import PageLayout from "@/layouts/Base.astro";
import { services } from "@/data/services";

const meta = {
	title: "Technical SEO Services",
	description:
		"Expert technical SEO consulting services: Google indexation fixes, Index Bloat solutions, server optimization, and site architecture analysis for US & Canada businesses.",
};
---

<PageLayout meta={meta}>
	<div class="section">
		<div class="flex flex-wrap items-center justify-between gap-2">
			<div class="eyebrow">Services</div>
			<h1 class="title text-gradient">Technical SEO Services</h1>
			<div class="flex flex-wrap gap-2 pt-2">
				<span class="badge">Indexation</span>
				<span class="badge">Performance</span>
				<span class="badge">Architecture</span>
			</div>
		</div>

		<section class="section">
			<h2 class="text-2xl font-bold">Expert Solutions for Complex SEO Problems</h2>
			<p class="text-lg">
				I specialize in solving the technical SEO issues that prevent your website from reaching its
				full potential in Google search results.
			</p>
		</section>

		<section class="section">
			<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
				{
					services.map((svc) => (
						<a href={svc.path} class="card block">
							<div class="flex items-start gap-4">
								<span class="icon-badge" aria-hidden="true">
									<svg
										viewBox="0 0 24 24"
										width="18"
										height="18"
										fill="none"
										stroke="currentColor"
										stroke-width="1.5"
									>
										<path d="M4 7h16M4 12h10M4 17h16" stroke-linecap="round" />
									</svg>
								</span>
								<div>
									<h3 class="text-xl font-semibold">{svc.title}</h3>
									<p class="mt-2 text-sm text-gray-700 dark:text-gray-300">{svc.description}</p>
								</div>
							</div>
						</a>
					))
				}
			</div>
		</section>
		<hr class="divider" />

		<section class="section">
			<h2 class="text-2xl font-bold">Why Choose SEO Repair Lab?</h2>
			<div class="space-y-3">
				<div class="flex items-start gap-3">
					<span class="text-accent mt-1" aria-hidden="true"
						><svg
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							><path d="M20 6L9 17l-5-5" stroke-linecap="round" stroke-linejoin="round"></path></svg
						></span
					>
					<p>
						<strong>Deep Technical Expertise:</strong> Years of experience solving complex indexation
						and crawling issues
					</p>
				</div>
				<div class="flex items-start gap-3">
					<span class="text-accent mt-1" aria-hidden="true"
						><svg
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							><path d="M20 6L9 17l-5-5" stroke-linecap="round" stroke-linejoin="round"></path></svg
						></span
					>
					<p>
						<strong>US & Canada Focus:</strong> Understanding of North American market dynamics and search
						behaviors
					</p>
				</div>
				<div class="flex items-start gap-3">
					<span class="text-accent mt-1" aria-hidden="true"
						><svg
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							><path d="M20 6L9 17l-5-5" stroke-linecap="round" stroke-linejoin="round"></path></svg
						></span
					>
					<p>
						<strong>Remote Efficiency:</strong> Full consulting services delivered remotely with clear
						communication
					</p>
				</div>
				<div class="flex items-start gap-3">
					<span class="text-accent mt-1" aria-hidden="true"
						><svg
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							><path d="M20 6L9 17l-5-5" stroke-linecap="round" stroke-linejoin="round"></path></svg
						></span
					>
					<p>
						<strong>Results-Driven:</strong> Focus on measurable improvements in organic visibility and
						rankings
					</p>
				</div>
			</div>
		</section>

		<section class="section">
			<h2 class="text-2xl font-bold">Ready to Fix Your SEO Issues?</h2>
			<p class="text-lg">
				Let's discuss your technical SEO challenges and create a custom solution that drives real
				results.
			</p>
			<a href="/contact/" class="btn btn-primary">Get Your Free SEO Audit</a>
		</section>
	</div>
</PageLayout>
