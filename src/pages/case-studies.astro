---
import PageLayout from "@/layouts/Base.astro";

const meta = {
  title: "Technical SEO Case Studies - Real Client Results",
  description:
    "See how Jessica Schmukler solved complex technical SEO issues for law firms, logistics companies, Shopify stores, and more. Anonymous case studies with real results.",
};

const caseStudiesSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  name: "Technical SEO Case Studies",
  description: "Real-world technical SEO solutions and results from 200+ client projects",
  about: {
    "@type": "Service",
    name: "Technical SEO Consulting",
    provider: {
      "@type": "Person",
      name: "Jessica Schmukler",
    },
  },
};

const caseStudies = [
  {
    id: "01",
    name: "Mid-size personal injury law firm",
    location: "California, USA",
    metric: { value: "+340%", label: "Organic traffic" },
    problems: [
      { label: "Index bloat", detail: "12,000+ low-quality pages indexed" },
      { label: "Duplicate content", detail: "Multiple URLs for the same practice areas" },
      { label: "Crawl budget waste", detail: "75% of crawl budget spent on low-value pages" },
      { label: "Site speed", detail: "8.2 second average load time" },
    ],
    solutions: [
      "De-indexed 9,500+ low-value pages using strategic noindex directives",
      "Implemented canonical URLs to consolidate overlapping practice areas",
      "Optimized server response times, reducing average load to 3.2 seconds",
      "Fixed 247 technical issues blocking Googlebot from key templates",
    ],
    stats: [
      { value: "6 months", label: "Project timeline" },
      { value: "2,500", label: "Quality pages indexed" },
      { value: "85%", label: "Crawl budget efficiency" },
    ],
  },
  {
    id: "02",
    name: "International logistics company",
    location: "Toronto, Canada",
    metric: { value: "+180%", label: "Indexed pages" },
    problems: [
      { label: "Server errors", detail: "500+ 5xx errors recorded daily" },
      { label: "Internationalization", detail: "Broken hreflang across eight markets" },
      { label: "Large scale site", detail: "50,000+ pages with weak architecture" },
      { label: "Tracking chaos", detail: "Parameter-based URLs creating duplicates" },
    ],
    solutions: [
      "Fixed server configuration and caching to cut 5xx errors by 95%",
      "Rebuilt hreflang structure covering eight countries and languages",
      "Configured URL parameter handling within Google Search Console",
      "Designed a logical architectural framework with strengthened internal linking",
    ],
    stats: [
      { value: "4 months", label: "Project timeline" },
      { value: "32,000", label: "Pages successfully indexed" },
      { value: "8", label: "Countries optimised" },
    ],
  },
  {
    id: "03",
    name: "Shopify auto parts e-commerce",
    location: "Texas, USA",
    metric: { value: "+275%", label: "Product visibility" },
    problems: [
      { label: "Shopify limitations", detail: "Duplicate content issues baked into templates" },
      { label: "Product schema", detail: "Broken structured data for 15,000+ products" },
      { label: "Collections mess", detail: "Infinite pagination confusing Google" },
      { label: "Core Web Vitals", detail: "Poor performance on mobile" },
    ],
    solutions: [
      "Applied strategic canonical rules to collections and filters",
      "Fixed Product schema markup across the entire catalogue",
      "Optimised the Shopify theme for faster, leaner Core Web Vitals",
      "Implemented proper pagination with rel=\"next\" and rel=\"prev\" attributes",
    ],
    stats: [
      { value: "3 months", label: "Project timeline" },
      { value: "15,000+", label: "Products optimised" },
      { value: "45%", label: "Core Web Vitals improvement" },
    ],
  },
  {
    id: "04",
    name: "Digital marketing agency",
    location: "New York, USA",
    metric: { value: "+520%", label: "Blog indexation" },
    problems: [
      { label: "Content not indexing", detail: "70% of new blog posts ignored by Google" },
      { label: "WordPress issues", detail: "Plugin conflicts producing 404 errors" },
      { label: "Sitemap problems", detail: "XML sitemap shipping broken URLs" },
      { label: "Internal linking", detail: "Orphaned pages with zero internal references" },
    ],
    solutions: [
      "Cleaned XML sitemaps and removed all error URLs",
      "Fixed WordPress permalink structure and conflicting plugins",
      "Implemented strategic internal linking architecture across hubs and posts",
      "Set up focused robots.txt and crawl rules to keep the index lean",
    ],
    stats: [
      { value: "2 months", label: "Project timeline" },
      { value: "400+", label: "Blog posts indexed" },
      { value: "95%", label: "New content indexation" },
    ],
  },
  {
    id: "05",
    name: "Medical equipment leasing company",
    location: "Florida, USA",
    metric: { value: "+190%", label: "Local visibility" },
    problems: [
      { label: "Local SEO issues", detail: "Multiple location pages with thin content" },
      { label: "Schema problems", detail: "Missing LocalBusiness markup" },
      { label: "Mobile issues", detail: "Mobile experience hurting rankings" },
      { label: "Security problems", detail: "Mixed content warnings from HTTP resources" },
    ],
    solutions: [
      "Consolidated location pages with substantial unique content",
      "Implemented comprehensive LocalBusiness schema",
      "Fixed mobile usability and Core Web Vitals issues",
      "Resolved HTTPS mixed content warnings across the site",
    ],
    stats: [
      { value: "3 months", label: "Project timeline" },
      { value: "12", label: "Locations optimised" },
      { value: "100%", label: "HTTPS compliance" },
    ],
  },
];
---

<PageLayout meta={meta}>
  <script type="application/ld+json" set:html={JSON.stringify(caseStudiesSchema)} />

  <section class="section">
    <div class="space-y-16">
      <div class="relative overflow-hidden rounded-[36px] border border-[var(--color-border)] bg-[var(--color-surface)] px-10 py-14 shadow-[0_50px_120px_-72px_rgba(32,20,8,0.7)] sm:px-14">
        <div class="pointer-events-none absolute -left-24 top-10 h-72 w-72 rounded-full bg-[radial-gradient(circle_at_center,rgba(40,33,27,0.5),rgba(40,33,27,0))] blur-3xl"></div>
        <div class="pointer-events-none absolute -right-20 bottom-4 h-72 w-72 rounded-full bg-[radial-gradient(circle_at_center,rgba(213,178,119,0.24),rgba(213,178,119,0))] blur-3xl"></div>
        <div class="pointer-events-none absolute inset-x-20 -top-10 h-20 bg-[radial-gradient(circle_at_center,rgba(213,178,119,0.24),rgba(213,178,119,0))] blur-2xl"></div>

        <div class="relative grid gap-10 lg:grid-cols-[1.15fr,0.85fr]">
          <div class="space-y-6">
            <div class="eyebrow">Results Portfolio</div>
            <h1 class="text-5xl font-semibold leading-tight text-[var(--color-global-text)] sm:text-6xl">
              Proven technical SEO interventions
            </h1>
            <p class="max-w-2xl text-base leading-relaxed text-[var(--color-muted)]">
              Client identities stay confidential. The failures, remediations, and performance outcomes below are real engagements that demonstrate the depth of technical problem solving.
            </p>
            <div class="flex flex-wrap gap-2 text-[11px] uppercase tracking-[0.3em] text-[var(--color-muted)]">
              <span class="rounded-full border border-[var(--color-border)] bg-[var(--color-surface)] px-4 py-1">Crawl recovery</span>
              <span class="rounded-full border border-[var(--color-border)] bg-[var(--color-surface)] px-4 py-1">Architecture rebuilds</span>
              <span class="rounded-full border border-[var(--color-border)] bg-[var(--color-surface)] px-4 py-1">Performance hardening</span>
            </div>
          </div>
          <div class="space-y-5 rounded-[28px] border border-[var(--color-border)] bg-[var(--color-surface-muted)] p-8 text-sm text-[var(--color-muted)] shadow-[0_34px_72px_-48px_rgba(24,15,7,0.55)] backdrop-blur">
            <p class="text-xs uppercase tracking-[0.3em] text-[var(--color-muted)]">Inside each engagement</p>
            <ul class="space-y-3">
              <li class="relative pl-6 leading-relaxed before:absolute before:left-0 before:top-2 before:h-2 before:w-2 before:rounded-full before:bg-[var(--color-accent)]">Structured discovery using crawls, logs, and analytics diagnostics.</li>
              <li class="relative pl-6 leading-relaxed before:absolute before:left-0 before:top-2 before:h-2 before:w-2 before:rounded-full before:bg-[var(--color-accent)]">Prioritised remediation mapped to engineering effort and revenue impact.</li>
              <li class="relative pl-6 leading-relaxed before:absolute before:left-0 before:top-2 before:h-2 before:w-2 before:rounded-full before:bg-[var(--color-accent)]">Implementation partnership and validation to prevent regression.</li>
            </ul>
          </div>
        </div>
      </div>

      {caseStudies.map((study) => (
        <div class="relative overflow-hidden rounded-[32px] border border-[var(--color-border)] bg-[var(--color-surface)] px-10 py-12 shadow-[0_48px_110px_-70px_rgba(30,18,8,0.7)]">
          <div class="pointer-events-none absolute -left-24 top-12 h-72 w-72 rounded-full bg-[radial-gradient(circle_at_center,rgba(40,33,27,0.45),rgba(40,33,27,0))] blur-3xl"></div>
          <div class="pointer-events-none absolute -right-16 bottom-0 h-72 w-72 translate-y-1/3 rounded-full bg-[radial-gradient(circle_at_center,rgba(213,178,119,0.24),rgba(213,178,119,0))] blur-3xl"></div>

          <div class="relative space-y-10">
            <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
              <div class="space-y-3">
                <div class="inline-flex items-center gap-3">
                  <div class="eyebrow">Case Study #{study.id}</div>
                  <span class="rounded-full border border-[var(--color-border)] bg-[var(--color-surface-muted)] px-3 py-1 text-[11px] uppercase tracking-[0.3em] text-[var(--color-muted)]">
                    {study.location}
                  </span>
                </div>
                <h2 class="text-3xl font-semibold leading-tight text-[var(--color-global-text)] sm:text-4xl">
                  {study.name}
                </h2>
              </div>
              <div class="rounded-full border border-[var(--color-border)] bg-[var(--color-surface-muted)] px-6 py-4 text-center shadow-[0_24px_50px_-36px_rgba(26,16,6,0.55)]">
                <p class="text-sm uppercase tracking-[0.32em] text-[var(--color-muted)]">{study.metric.label}</p>
                <p class="text-2xl font-semibold text-[var(--color-global-text)]">{study.metric.value}</p>
              </div>
            </div>

            <div class="grid gap-8 md:grid-cols-2">
              <div class="space-y-4">
                <h3 class="text-lg font-semibold text-[var(--color-global-text)]">Failures diagnosed</h3>
                <ul class="space-y-3 text-sm leading-relaxed text-[var(--color-muted)]">
                  {study.problems.map((item) => (
                    <li class="relative pl-6 before:absolute before:left-0 before:top-2 before:h-2 before:w-2 before:rounded-full before:bg-[var(--color-accent)]">
                      {item.label ? <strong>{item.label}:</strong> : null} {item.detail}
                    </li>
                  ))}
                </ul>
              </div>
              <div class="space-y-4">
                <h3 class="text-lg font-semibold text-[var(--color-global-text)]">Remediation</h3>
                <ul class="space-y-3 text-sm leading-relaxed text-[var(--color-muted)]">
                  {study.solutions.map((line) => (
                    <li class="relative pl-6 before:absolute before:left-0 before:top-2 before:h-2 before:w-2 before:rounded-full before:bg-[var(--color-accent)]">
                      {line}
                    </li>
                  ))}
                </ul>
              </div>
            </div>

            <div class="rounded-[28px] border border-[var(--color-border)] bg-[var(--color-surface-muted)] px-6 py-6 shadow-[0_30px_70px_-54px_rgba(22,14,7,0.55)] backdrop-blur">
              <div class="grid gap-4 sm:grid-cols-3">
                {study.stats.map((stat) => (
                  <div class="text-center">
                    <p class="text-2xl font-semibold text-[var(--color-global-text)]">{stat.value}</p>
                    <p class="text-xs uppercase tracking-[0.3em] text-[var(--color-muted)]">{stat.label}</p>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}

      <div class="rounded-[32px] border border-[var(--color-border)] bg-[var(--color-surface-muted)] px-10 py-10 text-sm text-[var(--color-muted)] shadow-[0_42px_90px_-60px_rgba(20,12,6,0.55)] backdrop-blur">
        <h3 class="text-lg font-semibold text-[var(--color-global-text)]">Case study confidentiality</h3>
        <p class="mt-3 leading-relaxed">
          Every engagement shown reflects real technical programs delivered by Jessica Schmukler. Client identities are anonymised under NDAs, but the industries, blockers, and outcomes remain accurate so you can evaluate methodology and impact.
        </p>
      </div>

      <div class="rounded-[30px] border border-[var(--color-border)] bg-[var(--color-surface)] px-8 py-12 text-center shadow-[0_40px_84px_-60px_rgba(20,12,6,0.52)]">
        <h3 class="text-3xl font-semibold text-[var(--color-global-text)]">Ready to become the next recovery story?</h3>
        <p class="mx-auto mt-4 max-w-3xl text-base leading-relaxed text-[var(--color-muted)]">
          Share the crawl failures, indexation gaps, or performance regressions slowing your growth. I will outline the technical program to fix them with the same discipline shown above.
        </p>
        <div class="mt-8 flex flex-col justify-center gap-4 sm:flex-row">
          <a href="/contact/" class="btn btn-primary">Start a technical engagement</a>
          <a href="/services/" class="btn btn-ghost">Review service programs</a>
        </div>
      </div>
    </div>
  </section>
</PageLayout>





