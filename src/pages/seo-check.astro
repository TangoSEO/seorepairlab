
---
import Base from "@/layouts/Base.astro";
import SeoCheckApp from "@/layouts/components/SeoCheckApp";

// Static page is fine since we use client-side fetching for the API.
// No need for 'export const prerender = false' unless using SSR adapter.
---

<Base 
  title="Instant SEO Check - Free Website Performance Audit" 
  metaDescription="Check your website's performance, Core Web Vitals, and SEO score instantly with my free tool."
>
  <section class="py-20 bg-white min-h-screen">
    <div class="container mx-auto px-4">
      <SeoCheckApp client:load />
    </div>
  </section>
</Base>
