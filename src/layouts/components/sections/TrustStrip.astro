---
import { getEntryCTM } from "@/lib/customContentLoader.astro";
import overrideObjects from "@/lib/utils/overrideObjects.ts";
import { markdownify } from "@/lib/utils/textConverter";

type TrustStat = {
  value: string;
  label: string;
};

type TrustStripInterface = {
  enable?: boolean;
  list?: TrustStat[];
};

type Props = {
  content?: TrustStripInterface;
};

let defaultContent = (
  await getEntryCTM("sections", "trust-strip", Astro.currentLocale)
)?.data as TrustStripInterface;

let actualContent = overrideObjects(
  { ...defaultContent },
  Astro.props.content,
) as TrustStripInterface;

const { enable = true, list = [] } = actualContent || {};

if (!enable) {
  return null;
}
---

<section id="trust" data-aos="fade" data-aos-duration="300" class="bg-white border-b-2 border-black">
  <div class="container">
    <div class="grid grid-cols-2 md:grid-cols-4 divide-x-2 divide-black border-x-2 border-black">
      {list.map((item) => (
        <div class="p-6 text-center transform transition-transform hover:-translate-y-1">
          <div class="font-bold text-3xl md:text-4xl text-black tracking-tight">{item.value}</div>
          <div class="mt-1 text-xs font-bold uppercase tracking-widest text-gray-500" set:html={markdownify(item.label)} />
        </div>
      ))}
    </div>
  </div>
</section>
