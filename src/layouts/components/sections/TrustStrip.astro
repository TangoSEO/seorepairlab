---
import { getEntryCTM } from "@/lib/customContentLoader.astro";
import overrideObjects from "@/lib/utils/overrideObjects.ts";
import { markdownify } from "@/lib/utils/textConverter";

type TrustStat = {
  value: string;
  label: string;
};

type TrustStripInterface = {
  enable?: boolean;
  list?: TrustStat[];
};

type Props = {
  content?: TrustStripInterface;
};

let defaultContent = (
  await getEntryCTM("sections", "trust-strip", Astro.currentLocale)
)?.data as TrustStripInterface;

let actualContent = overrideObjects(
  { ...defaultContent },
  Astro.props.content,
) as TrustStripInterface;

const { enable = true, list = [] } = actualContent || {};

if (!enable) {
  return null;
}
---

<section id="trust" data-aos="fade" data-aos-duration="300" class="bg-white border-b-2 border-black" style="background-image: linear-gradient(#f0f0f0 1px, transparent 1px), linear-gradient(90deg, #f0f0f0 1px, transparent 1px); background-size: 40px 40px;">
  <div class="container">
    <div class="grid grid-cols-2 md:grid-cols-4 border-x-2 border-black">
      {list.map((item) => (
        <div class="p-8 text-center border-r-2 border-black last:border-r-0 md:odd:border-r-2 border-b-2 md:border-b-0 hover:bg-black hover:text-white transition-colors duration-300 group">
          <div class="font-bold text-4xl md:text-5xl text-black group-hover:text-white tracking-tighter mb-2">{item.value}</div>
          <p class="text-xs font-bold uppercase tracking-widest text-gray-500 group-hover:text-white/80" set:html={markdownify(item.label)} />
        </div>
      ))}
    </div>
  </div>
</section>
