---
import { menuLinks, siteConfig } from "@/site.config";

const year = new Date().getFullYear();
---

<footer class="mt-auto w-full border-t border-[var(--color-border)] pt-12">
  <div class="flex flex-col items-start justify-between gap-8 text-xs uppercase tracking-[0.35em] text-[var(--color-muted)] sm:flex-row sm:items-center">
    <div class="space-y-2">
      <p class="text-[11px]">{siteConfig.title}</p>
      <p class="text-[11px]">&copy; {year} {siteConfig.author}</p>
    </div>
    <nav aria-labelledby="footer_links" class="flex flex-wrap gap-4">
      <p id="footer_links" class="sr-only">More on this site</p>
      {
        menuLinks.map((link) => (
          <a class="transition hover:text-[var(--color-global-text)]" href={link.path}>
            {link.title}
          </a>
        ))
      }
    </nav>
  </div>
</footer>
